<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SupWhite"
    tools:context=".DrugActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/top_layout"
                    android:layout_height="wrap_content">
                        <TextView
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textView1"
                            android:textAlignment="viewEnd"
                            android:textSize="20sp"
                            android:textColor="@android:color/background_dark"
                            android:paddingRight="10dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="16dp"
                            android:fontFamily="sans-serif" />

                </RelativeLayout>
                <Button
                    android:id="@+id/magic_btn1"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:text="Side Effects"
                    android:background="@color/SupDarkGreen"
                    android:layout_height="50dp"
                    android:layout_below="@+id/top_layout"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="25dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/arrow"
                    android:id="@+id/imageView4" />

                <LinearLayout
                    android:layout_below="@id/magic_btn1"
                    android:id="@+id/magic_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:id="@+id/side_effects"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="20sp" />
                </LinearLayout>

                <Button
                    android:layout_marginTop="15dp"
                    android:id="@+id/magic_btn2"
                    android:layout_width="match_parent"
                    android:layout_below="@id/magic_layout1"
                    android:visibility="visible"
                    android:text="Pros"
                    android:background="@color/SupDarkGreen"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:layout_below="@id/magic_btn2"
                    android:id="@+id/magic_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:id="@+id/pros"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            />
                </LinearLayout>

                <Button
                    android:layout_marginTop="15dp"
                    android:id="@+id/magic_btn3"
                    android:layout_width="match_parent"
                    android:layout_below="@id/magic_layout2"
                    android:visibility="visible"
                    android:text="Cons"
                    android:background="@color/SupDarkGreen"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:layout_below="@id/magic_btn3"
                    android:id="@+id/magic_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:id="@+id/cons"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            />
                </LinearLayout>

                <Button
                    android:layout_marginTop="15dp"
                    android:id="@+id/magic_btn4"
                    android:layout_width="match_parent"
                    android:layout_below="@id/magic_layout3"
                    android:visibility="visible"
                    android:text="Dosage"
                    android:background="@color/SupDarkGreen"
                    android:elevation="0dp"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:layout_below="@id/magic_btn4"
                    android:id="@+id/magic_layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:id="@+id/dosage"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@+id/magic_layout4"
                    android:id="@+id/test_name"
                    android:text=""
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />





        </RelativeLayout>
</ScrollView>